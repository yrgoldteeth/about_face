#!/usr/bin/env ruby
 
# About face pdf converter thingy.
require File.dirname(__FILE__) + '/../lib/about_face'
require 'thin'
 
rackup_file = "#{File.dirname(__FILE__)}/../lib/about_face/config.ru"
 
argv = ARGV
argv << ["-R", rackup_file] unless ARGV.include?("-R")
argv << ["-p", "2003"] unless ARGV.include?("-p")
argv << ["-e", "production"] unless ARGV.include?("-e")
Thin::Runner.new(argv.flatten).run!
